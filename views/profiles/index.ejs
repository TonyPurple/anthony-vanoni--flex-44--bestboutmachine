<%- include('./../partials/html-head') %>
    <%- include('./../partials/nav') %>

        <h1>
            All Users
        </h1>

        <% profiles.forEach(profile => { %>
            <a href="/profiles/<%= profile._id %>">
                <% if (profile.avatar) { %>
                    <img src="<%= profile.avatar %>" alt=" <%= profile.name %> ">
                    <p>
                        <%= profile.name %>
                    </p>
                    <% } %>
            </a>
            <% }) %>

                <%- include('./../partials/footer') %>